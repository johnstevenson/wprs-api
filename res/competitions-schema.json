{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Competition endpoint",
    "type": "object",
    "required": [
        "meta",
        "data"
    ],
    "additionalProperties": false,
    "properties": {
        "meta": {
            "$ref": "#/$defs/meta"
        },
        "data": {
            "type": "object",
            "required": [
                "details",
                "items"
            ],
            "additionalProperties": false,
            "properties": {
                "details": {
                    "type": "null"
                },
                "items": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/competition"
                    }
                },
                "errors": {
                    "type": ["array", "null"],
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "$defs": {
        "meta": {
            "type": "object",
            "required": [
                "endpoint",
                "discipline",
                "ranking_date",
                "count",
                "version"
            ],
            "additionalProperties": false,
            "properties": {
                "endpoint": {
                    "type": "string"
                },
                "discipline": {
                    "type": "string"
                },
                "ranking_date": {
                    "$ref": "#/$defs/dateString"
                },
                "count": {
                    "type": "integer"
                },
                "version": {
                    "type": "string"
                }
            }
        },
        "competition": {
            "type": "object",
            "required": [
                "name",
                "id",
                "start_date",
                "end_date",
                "ta",
                "pn",
                "pq",
                "td",
                "tasks",
                "pilots",
                "pilots_last_12_months",
                "comps_last_12_months",
                "days_since_end",
                "last_score",
                "winner_score",
                "updated"
            ],
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "start_date": {
                    "$ref": "#/$defs/dateString"
                },
                "end_date": {
                    "$ref": "#/$defs/dateString"
                },
                "ta": {
                    "$ref": "#/$defs/floatString"
                },
                "pn": {
                    "$ref": "#/$defs/floatString"
                },
                "pq": {
                    "$ref": "#/$defs/floatString"
                },
                "td": {
                    "$ref": "#/$defs/floatString"
                },
                "tasks": {
                    "type": "integer"
                },
                "pilots": {
                    "type": "integer"
                },
                "pilots_last_12_months": {
                    "type": "integer"
                },
                "comps_last_12_months": {
                    "type": "integer"
                },
                "days_since_end": {
                    "type": "integer"
                },
                "last_score": {
                    "$ref": "#/$defs/floatString"
                },
                "winner_score": {
                    "$ref": "#/$defs/floatString"
                },
                "updated": {
                    "type": "string"
                }
            }
        },
        "dateString": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "floatString": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+$"
        }
    }
}
