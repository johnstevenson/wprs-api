{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Competition endpoint",
    "type": "object",
    "required": [
        "meta",
        "data"
    ],
    "additionalProperties": false,
    "properties": {
        "meta": {
            "$ref": "#/definitions/meta"
        },
        "data": {
            "type": "object",
            "required": [
                "details",
                "items"
            ],
            "additionalProperties": false,
            "properties": {
                "details": {
                    "$ref": "#/definitions/details"
                },
                "items": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/result"
                    }
                },
                "errors": {
                    "type": ["array", "null"],
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "definitions": {
        "meta": {
            "type": "object",
            "required": [
                "endpoint",
                "discipline",
                "ranking_date",
                "count",
                "version"
            ],
            "additionalProperties": false,
            "properties": {
                "endpoint": {
                    "type": "string"
                },
                "discipline": {
                    "type": "string"
                },
                "ranking_date": {
                    "type": "string"
                },
                "count": {
                    "type": "integer"
                },
                "version": {
                    "type": "string"
                }
            }
        },
        "details": {
            "type": "object",
            "required": [
                "name",
                "id",
                "start_date",
                "end_date",
                "ta",
                "pn",
                "pq",
                "td",
                "tasks",
                "pq_srp",
                "pq_srtp",
                "pilots",
                "pq_rank_date",
                "pilots_last_12_months",
                "comps_last_12_months",
                "days_since_end",
                "last_score",
                "winner_score",
                "updated"
            ],
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "start_date": {
                    "type": "string"
                },
                "end_date": {
                    "type": "string"
                },
                "ta": {
                    "type": "string"
                },
                "pn": {
                    "type": "string"
                },
                "pq": {
                    "type": "string"
                },
                "td": {
                    "type": "string"
                },
                "tasks": {
                    "type": "integer"
                },
                "pq_srp": {
                    "type": "string"
                },
                "pq_srtp": {
                    "type": "string"
                },
                "pilots": {
                    "type": "integer"
                },
                "pq_rank_date": {
                    "type": "string"
                },
                "pilots_last_12_months": {
                    "type": "integer"
                },
                "comps_last_12_months": {
                    "type": "integer"
                },
                "days_since_end": {
                    "type": "integer"
                },
                "last_score": {
                    "type": "string"
                },
                "winner_score": {
                    "type": "string"
                },
                "updated": {
                    "type": "string"
                }
            }
        },
        "result": {
            "type": "object",
            "required": [
                "rank",
                "pp",
                "points",
                "td_points",
                "score",
                "pilot",
                "civl_id"
            ],
            "additionalProperties": false,
            "properties": {
                "rank": {
                    "type": "integer"
                },
                "pp": {
                    "type": "string"
                },
                "points": {
                    "type": "string"
                },
                "td_points": {
                    "type": "string"
                },
                "score": {
                    "type": "integer"
                },
                "pilot": {
                    "type": "string"
                },
                "civl_id": {
                    "type": "integer"
                }
            }
        }
    }
}
