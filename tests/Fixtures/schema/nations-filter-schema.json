{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Nations endpoint",
    "type": "object",
    "required": [
        "meta",
        "data"
    ],
    "additionalProperties": false,
    "properties": {
        "meta": {
            "$ref": "#/$defs/metaNations"
        },
        "data": {
            "type": "object",
            "required": [
                "details",
                "items"
            ],
            "additionalProperties": false,
            "properties": {
                "details": {
                    "$ref": "#/$defs/details"
                },
                "items": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/nation"
                    }
                },
                "errors": {
                    "type": "null"
                }
            }
        }
    },
    "$defs": {
        "metaNations": {
            "type": "object",
            "required": [
                "endpoint",
                "discipline",
                "ranking_date",
                "count",
                "version"
            ],
            "additionalProperties": false,
            "properties": {
                "endpoint": {
                    "type": "string",
                    "pattern": "^nations$"
                },
                "discipline": {
                    "$ref": "#/$defs/discipline"
                },
                "ranking_date": {
                    "$ref": "#/$defs/dateString"
                },
                "count": {
                    "type": "integer"
                },
                "version": {
                    "type": "string"
                }
            }
        },
        "details": {
            "type": "object",
            "required": [
                "region",
                "region_id",
                "count_ww"
            ],
            "additionalProperties": false,
            "properties": {
                "region": {
                    "type": "string"
                },
                "region_id": {
                    "type": "integer"
                },
                "nation": {
                    "type": "string"
                },
                "nation_id": {
                    "type": "integer"
                },
                "count_ww": {
                    "type": "integer"
                }
            }
        },
        "nation": {
            "type": "object",
            "required": [
                "id",
                "name",
                "points",
                "rank"
            ],
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "points": {
                    "$ref": "#/$defs/floatString"
                },
                "rank": {
                    "type": "integer"
                }
            }
        },
        "dateString": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "floatString": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+$"
        },
        "discipline": {
            "type": "string",
            "enum": [
                "hang-gliding-class-1",
                "hang-gliding-class-1-sport",
                "hang-gliding-class-2",
                "hang-gliding-class-5",
                "paragliding-xc",
                "paragliding-accuracy",
                "paragliding-acro-solo",
                "paragliding-acro-syncro"
            ]
        }
    }
}
